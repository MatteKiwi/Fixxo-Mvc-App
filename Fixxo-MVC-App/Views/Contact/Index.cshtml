@model Fixxo_MVC_App.ViewModels.ContactViewModel

<div class="embed-responsive embed-responsive-16by9">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d95780.66762266455!2d2.057787969404665!3d41.39263855782885!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a49816718e30e5%3A0x44b0fb3d4f47660a!2sBarcelona%2C%20Spanien!5e0!3m2!1ssv!2sse!4v1681904190411!5m2!1ssv!2sse" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="embed-responsive-item w-100"></iframe>
</div>

<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <form method="post" class="col-6" novalidate>
            <div class="mb-3 d-flex justify-content-center">
                <div asp-validation-summary="ModelOnly"></div>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control"/>
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="mb-3">
                <label asp-for="Message" class="form-label"></label>
                <input asp-for="Message" class="form-control"/>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Send Message</button>
            </div>
        </form>
    </div>
</div>